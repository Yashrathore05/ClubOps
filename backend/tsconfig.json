{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "types": ["node"],
    "rootDir": ".",
    "outDir": "dist",

    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@prisma/client": ["src/generated/prisma"]
    }
  },

  "include": [
    "src",
    "prisma"
  ]
}
